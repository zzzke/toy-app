<p id="notice"><%= notice %></p>

<h1>Mircoposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mircoposts.each do |mircopost| %>
      <tr>
        <td><%= mircopost.content %></td>
        <td><%= mircopost.user_id %></td>
        <td><%= link_to 'Show', mircopost %></td>
        <td><%= link_to 'Edit', edit_mircopost_path(mircopost) %></td>
        <td><%= link_to 'Destroy', mircopost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

